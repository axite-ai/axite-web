# ===========================================
# Axite Marketing Website - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in values

# -------------------------------------------
# Application URLs
# -------------------------------------------
NEXT_PUBLIC_URL=http://localhost:3000
NEXT_PUBLIC_DOCS_URL=http://localhost:3005
NEXT_PUBLIC_REFERENCE_DOCS_URL=http://localhost:3010
NEXT_PUBLIC_STUDIO_URL=http://localhost:8082
NEXT_PUBLIC_API_URL=http://localhost:8080/platform

# -------------------------------------------
# Build Configuration
# -------------------------------------------
# Set to 'true' to enable bundle analyzer
ANALYZE=false

# -------------------------------------------
# Vercel (auto-populated in Vercel deployments)
# -------------------------------------------
# These are automatically set by Vercel - no need to configure locally
# VERCEL=
# VERCEL_ENV=
# NEXT_PUBLIC_VERCEL_ENV=
# NEXT_PUBLIC_VERCEL_BRANCH_URL=
# VERCEL_GIT_COMMIT_SHA=

# -------------------------------------------
# Feature Flags (optional)
# -------------------------------------------
# NEXT_PUBLIC_IS_PLATFORM=false

# -------------------------------------------
# Supabase (if using Supabase features)
# -------------------------------------------
# Main Supabase project
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# SUPABASE_COM_SERVICE_ROLE_KEY=

# Misc/secondary Supabase project (for launch week features)
# NEXT_PUBLIC_MISC_USE_URL=
# NEXT_PUBLIC_MISC_USE_ANON_KEY=
# MISC_USE_SERVICE_ROLE_KEY=

# Contribute project
# NEXT_PUBLIC_SUPABASE_CONTRIBUTE_URL=
# NEXT_PUBLIC_SUPABASE_CONTRIBUTE_PUBLISHABLE_KEY=

# -------------------------------------------
# GitHub (for changelog feature)
# -------------------------------------------
# GitHub App credentials for changelog
# GITHUB_CHANGELOG_APP_ID=
# GITHUB_CHANGELOG_APP_INSTALLATION_ID=
# GITHUB_CHANGELOG_APP_PRIVATE_KEY=
# GITHUB_CHANGELOG_APP_REST_KEY=

# -------------------------------------------
# External Services
# -------------------------------------------
# hCaptcha for opt-out form
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=10000000-ffff-ffff-ffff-000000000001
HCAPTCHA_SECRET_KEY=0x0000000000000000000000000000000000000000

# OpenAI (for AI docs feature)
# OPENAI_API_KEY=

# CMS integration
# CMS_API_KEY=
# CMS_PREVIEW_SECRET=

# -------------------------------------------
# Analytics & Monitoring (optional)
# -------------------------------------------
# Sentry DSN (if using Sentry - currently disabled)
# NEXT_PUBLIC_SENTRY_DSN=

# Add your analytics keys here when ready
# NEXT_PUBLIC_GA_ID=
